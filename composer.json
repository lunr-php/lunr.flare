{
  "name": "lunr/flare",
  "description": "Lunr.Flare is an input validation extension for Lunr.Corona",
  "keywords": [ "input verification", "input validation" ],
  "homepage": "https://github.com/lunr-php/lunr.flare",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "dev",
  "require": {
    "php": ">=8.3",
    "lunr/corona": "dev-master"
  },
  "require-dev": {
    "lunr/halo": "dev-master",
    "phpunit/phpunit": ">=10.5 <11.0",
    "ext-xdebug": "~3.1"
  },
  "config": {
    "optimize-autoloader": true
  },
  "autoload": {
    "psr-4": {"Lunr\\": "src/Lunr/"}
  }
}
